FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Set environment variable for Docker
ENV VITE_API_TARGET=http://backend:8000

# Expose Vite dev server port
EXPOSE 5173

# Run Vite dev server with environment variable
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
